<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="YourVault.Views.BalanceListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourVault.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:balanceViews="using:YourVault.Views.BalanceView"
    mc:Ignorable="d"
    Padding="0, 6, 0, 0">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <balanceViews:BalanceOverview Grid.Row="0" x:Name="balanceOveviewPage"/>
        <balanceViews:BalanceListView Grid.Row="1" x:Name="balanceListPage"/>
    </Grid>
</Page>
