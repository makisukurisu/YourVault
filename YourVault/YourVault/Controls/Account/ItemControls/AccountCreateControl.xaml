<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="YourVault.Controls.Account.ItemControls.AccountCreateControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourVault.Controls.Account.ItemControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBox x:Name="NameTextBox" Header="Name" />
        <TextBox x:Name="ExternalIDTextBox" Header="External ID" />
        <ComboBox x:Name="BankProviderComboBox" Header="Bank Provider" />
        <TextBox x:Name="AuthInfoTextBox" Header="Auth Info" AcceptsReturn="True" />
    </StackPanel>
</Page>
